
@{
    ViewData["Title"] = "Create / Edit";
}

@model ListaDeTarefasWebMVC.Models.Task

<div>
    <h1 class="display-4">Create or edit a task</h1>
</div>

<form asp-action="CreateEditTaskForm" asp-controller="Home">
    <label>Id</label>
    <input class="form-control" type="number" placeholder="0" asp-for="Id" />

    <label class="mt-4">Título</label>
    <input class="form-control" type="text" placeholder="" asp-for="Title"/>

    <label class="mt-4">Descrição</label>
    <input class="form-control" type="text" placeholder="Adicione uma descrição" asp-for="Description"/>

    <label>Finalizada</label>
    <input class="form-control" type="checkbox" asp-for="IsCompleted" />

    <button class="btn btn-primary mt-4" type="submit">Ok</button>
</form>
